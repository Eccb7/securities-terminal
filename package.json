{
  "name": "securities-terminal",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.10",
    "@rails/actioncable": "^8.1.0",
    "@tanstack/react-query": "^5.90.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.12.2",
    "esbuild": "^0.23.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.tsx --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.tsx=tsx --loader:.ts=ts",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --minify",
    "watch": "esbuild app/javascript/application.tsx --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.tsx=tsx --loader:.ts=ts --watch",
    "dev": "concurrently \"npm run watch\" \"npm run build:css -- --watch\""
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.4.0"
  }
}

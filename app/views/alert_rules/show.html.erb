<div class="space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Alerts", alert_rules_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li class="text-gray-900 font-medium">
        Alert #<%= @alert_rule.id %>
      </li>
    </ol>
  </nav>

  <!-- Header with actions -->
  <div class="border-b border-gray-200 pb-5">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Alert Rule</h1>
        <p class="mt-2 text-sm text-gray-500">
          Created <%= time_ago_in_words(@alert_rule.created_at) %> ago
        </p>
      </div>
      
      <div class="flex gap-2">
        <%= link_to "Edit", edit_alert_rule_path(@alert_rule), class: "inline-flex items-center rounded-md bg-gray-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-500" %>
        <%= button_to "Delete", alert_rule_path(@alert_rule), method: :delete, class: "inline-flex items-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500", form: { data: { turbo_confirm: "Are you sure you want to delete this alert?" } } %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Alert details card -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Alert Details</h2>
        </div>
        
        <div class="px-6 py-4">
          <dl class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Security</dt>
              <dd class="mt-1">
                <%= link_to security_path(@alert_rule.security), class: "text-blue-600 hover:text-blue-900" do %>
                  <div class="text-sm font-medium"><%= @alert_rule.security.ticker %></div>
                  <div class="text-xs text-gray-500"><%= @alert_rule.security.name %></div>
                <% end %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <%
                  status_colors = {
                    "active" => "bg-green-100 text-green-800",
                    "inactive" => "bg-gray-100 text-gray-800",
                    "triggered" => "bg-yellow-100 text-yellow-800"
                  }
                %>
                <span class="inline-flex rounded-full px-2 py-1 text-xs font-semibold <%= status_colors[@alert_rule.status] %>">
                  <%= @alert_rule.status.titleize %>
                </span>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Condition</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @alert_rule.condition_type.titleize %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Operator</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @alert_rule.comparison_operator %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Target Price</dt>
              <dd class="mt-1 text-lg font-bold text-gray-900">
                <%= number_to_currency(@alert_rule.threshold_value, unit: "KES ") %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Notification Method</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @alert_rule.notification_method.titleize %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Created At</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @alert_rule.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Updated At</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @alert_rule.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Alert events -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Alert History</h2>
        </div>
        
        <% if @alert_events.any? %>
          <div class="divide-y divide-gray-200">
            <% @alert_events.each do |event| %>
              <div class="px-6 py-4">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="inline-flex items-center rounded-full <%= event.resolved? ? 'bg-gray-100 text-gray-800' : 'bg-yellow-100 text-yellow-800' %> px-2 py-1 text-xs font-semibold">
                        <%= event.status.titleize %>
                      </span>
                      <span class="text-xs text-gray-500">
                        <%= event.triggered_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </span>
                    </div>
                    
                    <p class="text-sm text-gray-900 mb-2">
                      <strong><%= @alert_rule.security.ticker %></strong> 
                      <%= @alert_rule.condition_type.titleize.downcase %> 
                      <%= @alert_rule.comparison_operator %> 
                      <%= number_to_currency(@alert_rule.threshold_value, unit: "KES ") %>
                    </p>
                    
                    <p class="text-xs text-gray-500">
                      Actual value: <%= number_to_currency(event.actual_value, unit: "KES ") %>
                    </p>
                    
                    <% if event.message.present? %>
                      <p class="text-xs text-gray-600 mt-1 italic">
                        <%= event.message %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <p class="text-sm text-gray-500">This alert has not been triggered yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Current market data -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Current Market</h2>
        </div>
        
        <div class="px-6 py-4 space-y-3">
          <% latest_quote = @alert_rule.security.latest_quote %>
          <% if latest_quote %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Price</dt>
              <dd class="mt-1 text-2xl font-bold text-gray-900">
                <%= number_to_currency(latest_quote.last_price, unit: "KES ") %>
              </dd>
              <% change_percent = latest_quote.price_change_percentage %>
              <div class="text-sm <%= change_percent >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= change_percent >= 0 ? '▲' : '▼' %> <%= number_to_percentage(change_percent.abs, precision: 2) %>
              </div>
            </div>
            
            <div class="pt-3 border-t border-gray-200">
              <dt class="text-sm font-medium text-gray-500">Distance from Target</dt>
              <% distance = latest_quote.last_price - @alert_rule.threshold_value %>
              <% distance_percent = (distance / @alert_rule.threshold_value * 100) if @alert_rule.threshold_value > 0 %>
              <dd class="mt-1 text-lg font-semibold <%= distance >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= distance >= 0 ? '+' : '' %><%= number_to_currency(distance, unit: "KES ") %>
                <% if distance_percent %>
                  <span class="text-sm">(<%= number_to_percentage(distance_percent, precision: 2) %>)</span>
                <% end %>
              </dd>
            </div>
            
            <div class="pt-3 border-t border-gray-200 text-xs text-gray-400">
              Updated <%= time_ago_in_words(latest_quote.timestamp) %> ago
            </div>
          <% else %>
            <p class="text-sm text-gray-500">No market data available</p>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Actions</h2>
        </div>
        
        <div class="px-6 py-4 space-y-2">
          <%= link_to "View #{@alert_rule.security.ticker}", security_path(@alert_rule.security), class: "block w-full text-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-500" %>
          
          <% if current_user.can_trade? %>
            <%= link_to "Trade #{@alert_rule.security.ticker}", new_order_path(security_id: @alert_rule.security.id), class: "block w-full text-center rounded-md bg-green-600 px-4 py-2 text-sm font-semibold text-white hover:bg-green-500" %>
          <% end %>
          
          <%= link_to "Back to Alerts", alert_rules_path, class: "block w-full text-center rounded-md bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-900 hover:bg-gray-200" %>
        </div>
      </div>
    </div>
  </div>
</div>

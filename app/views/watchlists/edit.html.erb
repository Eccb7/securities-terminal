<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Watchlists", watchlists_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li>
        <%= link_to @watchlist.name, watchlist_path(@watchlist), class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li class="text-gray-900 font-medium">Edit</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="border-b border-gray-200 pb-5">
    <h1 class="text-3xl font-bold text-gray-900">Edit Watchlist</h1>
    <p class="mt-2 text-sm text-gray-500">
      Update your watchlist settings
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-8">
      <%= form_with model: @watchlist, class: "space-y-6" do |f| %>
        <!-- Error messages -->
        <% if @watchlist.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@watchlist.errors.count, "error") %> prohibited this watchlist from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @watchlist.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Watchlist Name -->
        <div>
          <%= f.label :name, "Watchlist Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, 
                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                          required: true %>
        </div>

        <!-- Read-only info -->
        <div class="bg-gray-50 p-4 rounded-md space-y-3">
          <h3 class="text-sm font-medium text-gray-700">Watchlist Information</h3>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <dt class="text-xs text-gray-500">Securities Tracked</dt>
              <dd class="text-sm font-medium text-gray-900">
                <%= @watchlist.watchlist_items.count %>
              </dd>
            </div>
            
            <div>
              <dt class="text-xs text-gray-500">Created</dt>
              <dd class="text-sm font-medium text-gray-900">
                <%= @watchlist.created_at.strftime("%b %d, %Y") %>
              </dd>
            </div>
          </div>
        </div>

        <!-- Form actions -->
        <div class="flex justify-end gap-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", watchlist_path(@watchlist), class: "rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit "Update Watchlist", class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="space-y-6">
  <!-- Page header -->
  <div class="border-b border-gray-200 pb-5">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold leading-6 text-gray-900">Market News</h1>
        <p class="mt-2 text-sm text-gray-500">
          Latest news and updates from the Kenyan securities market
        </p>
      </div>
    </div>
  </div>

  <!-- Filters and search -->
  <div class="bg-white shadow rounded-lg p-6">
    <%= form_with url: news_items_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <%= text_field_tag :query, params[:query],
                            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                            placeholder: "Search news..." %>
        </div>

        <!-- Security filter -->
        <div>
          <%= select_tag :security_id,
                        options_from_collection_for_select(@securities, :id, :ticker, params[:security_id]),
                        include_blank: "All Securities",
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <!-- Category filter -->
        <div>
          <%= select_tag :category,
                        options_for_select([
                          ["All Categories", ""],
                          ["Earnings", "earnings"],
                          ["Dividend", "dividend"],
                          ["Corporate Action", "corporate_action"],
                          ["Market Update", "market_update"],
                          ["Regulatory", "regulatory"],
                          ["Other", "other"]
                        ], params[:category]),
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Search", class: "inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
        
        <% if params[:query].present? || params[:security_id].present? || params[:category].present? %>
          <%= link_to "Clear", news_items_path, class: "inline-flex items-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- News list -->
  <% if @news_items.any? %>
    <div class="space-y-4">
      <% @news_items.each do |news_item| %>
        <article class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <!-- Category badge -->
                <div class="mb-2">
                  <%
                    category_colors = {
                      "earnings" => "bg-green-100 text-green-800",
                      "dividend" => "bg-blue-100 text-blue-800",
                      "corporate_action" => "bg-purple-100 text-purple-800",
                      "market_update" => "bg-yellow-100 text-yellow-800",
                      "regulatory" => "bg-red-100 text-red-800",
                      "other" => "bg-gray-100 text-gray-800"
                    }
                  %>
                  <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= category_colors[news_item.category] || 'bg-gray-100 text-gray-800' %>">
                    <%= news_item.category.titleize %>
                  </span>
                  
                  <% if news_item.security %>
                    <%= link_to security_path(news_item.security), class: "ml-2 inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-800 hover:bg-indigo-200" do %>
                      <%= news_item.security.ticker %>
                    <% end %>
                  <% end %>
                </div>

                <!-- Title -->
                <h2 class="text-xl font-semibold text-gray-900 mb-2">
                  <%= link_to news_item.title, news_item_path(news_item), class: "hover:text-blue-600" %>
                </h2>

                <!-- Summary -->
                <p class="text-gray-600 mb-4 line-clamp-2">
                  <%= news_item.summary || truncate(news_item.content, length: 200) %>
                </p>

                <!-- Meta information -->
                <div class="flex items-center text-sm text-gray-500 space-x-4">
                  <span class="flex items-center">
                    <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <%= news_item.published_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </span>
                  
                  <% if news_item.source %>
                    <span class="flex items-center">
                      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                      <%= news_item.source %>
                    </span>
                  <% end %>
                </div>
              </div>

              <!-- Read more button -->
              <div class="ml-6">
                <%= link_to "Read More", news_item_path(news_item), class: "inline-flex items-center rounded-md bg-blue-50 px-3 py-2 text-sm font-semibold text-blue-700 hover:bg-blue-100" %>
              </div>
            </div>
          </div>
        </article>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex justify-center mt-8">
      <%= paginate @news_items %>
    </div>

  <% else %>
    <!-- Empty state -->
    <div class="text-center py-12 bg-white rounded-lg shadow">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No news found</h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if params[:query].present? || params[:security_id].present? || params[:category].present? %>
          Try adjusting your filters to see more results.
        <% else %>
          Check back later for market updates.
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<div class="max-w-2xl mx-auto space-y-6">
  <!-- Breadcrumb -->
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2">
      <li>
        <%= link_to "Portfolios", portfolios_path, class: "text-gray-500 hover:text-gray-700" %>
      </li>
      <li>
        <span class="text-gray-400">/</span>
      </li>
      <li class="text-gray-900 font-medium">New Portfolio</li>
    </ol>
  </nav>

  <!-- Header -->
  <div class="border-b border-gray-200 pb-5">
    <h1 class="text-3xl font-bold text-gray-900">Create New Portfolio</h1>
    <p class="mt-2 text-sm text-gray-500">
      Set up a new portfolio to track your investments
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-8">
      <%= form_with model: @portfolio, class: "space-y-6" do |f| %>
        <!-- Error messages -->
        <% if @portfolio.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@portfolio.errors.count, "error") %> prohibited this portfolio from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @portfolio.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Portfolio Name -->
        <div>
          <%= f.label :name, "Portfolio Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, 
                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                          placeholder: "e.g., Growth Portfolio, Dividend Portfolio",
                          required: true %>
          <p class="mt-2 text-sm text-gray-500">
            Choose a descriptive name for your portfolio
          </p>
        </div>

        <!-- Initial Cash Balance -->
        <div>
          <%= f.label :cash_balance, "Initial Cash Balance (KES)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.number_field :cash_balance, 
                            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                            placeholder: "0.00",
                            step: "0.01",
                            min: "0" %>
          <p class="mt-2 text-sm text-gray-500">
            Optional: Set an initial cash balance for your portfolio
          </p>
        </div>

        <!-- Form actions -->
        <div class="flex justify-end gap-3 pt-6 border-t border-gray-200">
          <%= link_to "Cancel", portfolios_path, class: "rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit "Create Portfolio", class: "rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Info box -->
  <div class="bg-blue-50 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">Portfolio Tips</h3>
        <div class="mt-2 text-sm text-blue-700">
          <ul class="list-disc pl-5 space-y-1">
            <li>You can manage multiple portfolios to track different investment strategies</li>
            <li>Cash balance can be updated later as you fund your portfolio</li>
            <li>Once created, you can start placing orders and tracking positions</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
